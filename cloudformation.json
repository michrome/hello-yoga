{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Resources": {
    "WebsiteCDN": {
      "Type": "AWS::CloudFront::Distribution",
      "Properties": {
        "DistributionConfig": {
          "Comment": "CloudFront for hello-yoga",
          "DefaultCacheBehavior": {
            "CachePolicyId": "658327ea-f89d-4fab-a63d-7e88639e58f6",
            "TargetOriginId": "hello-yoga-origin",
            "ViewerProtocolPolicy": "allow-all"
          },
          "DefaultRootObject": "index.html",
          "Enabled": true,
          "HttpVersion": "http2",
          "Origins": [
            {
              "DomainName": "hello-yoga.s3.eu-west-2.amazonaws.com",
              "Id": "hello-yoga-origin",
              "S3OriginConfig": {
                "OriginAccessIdentity": {
                  "Fn::Sub": [
                    "origin-access-identity/cloudfront/${Id}",
                    { "Id": { "Ref": "cloudfrontoriginaccessidentity" } }
                  ]
                }
              }
            }
          ]
        }
      }
    },
    "cloudfrontoriginaccessidentity": {
      "Type": "AWS::CloudFront::CloudFrontOriginAccessIdentity",
      "Properties": {
        "CloudFrontOriginAccessIdentityConfig": {
          "Comment": "access-identity-hello-yoga"
        }
      }
    },
    "S3Bucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": "hello-yoga",
        "PublicAccessBlockConfiguration": {
          "BlockPublicAcls": true,
          "BlockPublicPolicy": true,
          "IgnorePublicAcls": true,
          "RestrictPublicBuckets": true
        }
      }
    },
    "BucketPolicy": {
      "Type": "AWS::S3::BucketPolicy",
      "Properties": {
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "AWS": {
                  "Fn::Sub": [
                    "arn:aws:iam::cloudfront:user/CloudFront Origin Access Identity ${Id}",
                    { "Id": { "Ref": "cloudfrontoriginaccessidentity" } }
                  ]
                }
              },
              "Action": "s3:GetObject",
              "Resource": {
                "Fn::Join": [
                  "",
                  [
                    "arn:aws:s3:::",
                    {
                      "Ref": "S3Bucket"
                    },
                    "/*"
                  ]
                ]
              }
            }
          ]
        },
        "Bucket": {
          "Ref": "S3Bucket"
        }
      }
    },
    "dns": {
      "Type": "AWS::Route53::HostedZone",
      "Properties": {
        "Name": "hello-yoga.co.uk"
      }
    },
    "email": {
      "Type": "AWS::Route53::RecordSetGroup",
      "Properties": {
        "Comment": "DNS records for iCloud Mail",
        "HostedZoneId": {
          "Ref": "dns"
        },
        "RecordSets": [
          {
            "Name": "hello-yoga.co.uk",
            "ResourceRecords": [
              "\"v=spf1 redirect=icloud.com\"",
              "\"apple-domain=YJSfSmnGhO5EbjA5\""
            ],
            "TTL": 3600,
            "Type": "TXT"
          },
          {
            "Name": "hello-yoga.co.uk",
            "ResourceRecords": [
              "10 mx01.mail.icloud.com.",
              "10 mx02.mail.icloud.com."
            ],
            "TTL": 3600,
            "Type": "MX"
          },
          {
            "Name": "sig1._domainkey.hello-yoga.co.uk",
            "ResourceRecords": [
              "sig1.dkim.hello-yoga.co.uk.at.icloudmailadmin.com."
            ],
            "TTL": 3600,
            "Type": "CNAME"
          }
        ]
      }
    },
    "web": {
      "Type": "AWS::Route53::RecordSetGroup",
      "Properties": {
        "Comment": "DNS records for Netlify hosting",
        "HostedZoneId": {
          "Ref": "dns"
        },
        "RecordSets": [
          {
            "Name": "hello-yoga.co.uk",
            "ResourceRecords": ["75.2.60.5"],
            "TTL": 3600,
            "Type": "A"
          },
          {
            "Name": "www.hello-yoga.co.uk",
            "ResourceRecords": ["hello-yoga.netlify.com"],
            "TTL": 3600,
            "Type": "CNAME"
          }
        ]
      }
    }
  }
}
